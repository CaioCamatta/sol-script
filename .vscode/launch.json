{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Build & Debug Main",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/sol",
      "args": ["${input:testFile}"],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "Make debuggable program"
    },
    {
      "name": "Build & Debug tests",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/test/unit/unit_test",
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "Make debuggable test program"
    }
  ],
  "inputs": [
    {
      "id": "testFile",
      "type": "promptString",
      "description": "SolScript '.ss' file to debug.",
      "default": "./code.sol"
    }
  ]
}
