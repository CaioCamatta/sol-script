{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Build & Debug Main",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/delta",
      "args": ["${input:testFile}"],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "Make debuggable program"
    },
    {
      "name": "Build & Debug tests",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/test/unit/unit_test",
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "Make debuggable test program"
    }
  ],
  "inputs": [
    {
      "id": "testFile",
      "type": "promptString",
      "description": "Deltalang '.d' file to debug.",
      "default": "./test/unit/src/all_tokens.d"
    }
  ]
}
